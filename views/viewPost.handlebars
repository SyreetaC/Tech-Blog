{{>loggedInNavBar}}

<div class="container">
  <div class="text-center">
    <h1>{{title}}</h1>
    <h6>By {{username}}</h6>
    <hr />
    <div class="p-4">{{body}}</div>
    <div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body edit-post-form">
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" value="{{post.title}}" class="form-input" />
        <label class="form-label" for="content">Content</label>
        <input name="content" type="text" value="{{post.content}}" class="form-input" />
        <button type="submit" class="btn">Update Post</button>
        <button type="button" class="delete-post-btn btn">Delete Post</button>
    </form>
</div>
  </div>
  <hr />
  <div class="my-4">
    <h2 class="text-center">Comments</h2>
    <ul class="list-group">
      {{#each comments}}
        <li class="list-group-item">
          {{> comment}}
        </li>
      {{/each}}
    </ul>
  </div>
  <div>
    <form name="comment-form" id="{{id}}">
      <div class="mb-3">
        <label for="comment" class="form-label">Add your comment here...</label>
        <textarea class="form-control" id="comment" rows="3"></textarea>
      </div>
      <div class="d-grid gap-2">
        <button class="btn btn-primary" type="submit">Post Comment</button>
      </div>
    </form>
  </div>
</div>