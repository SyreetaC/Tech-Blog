{{> loggedInNavBar}}

<div class="container text-center">
  <h1>Edit blog</h1>
  <hr />
  <form class="my-4" name="edit-blog" id="{{id}}">
    <div class="mb-3">
      <label class="form-label">Blog Title</label>
      <input type="text" class="form-control" id="blog-title" value="{{title}}" />
    </div>
    <div class="mb-3">
      <label class="form-label">Blog Content</label>
      <textarea class="form-control" id="blog-content">{{body}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>